---
// ServicesSection.astro

const services = [
  {
    number: "01",
    icon: "zap",
    title: "Desarrollo Web a Medida",
    description:
    "Sistemas web o aplicaciones personalizadas según las necesidades específicas del negocio.",
    color: "green",
    href: "/servicios/web-design",
  },
  {
    number: "02",
    icon: "globe",
    title: "Automatización de Procesos Empresariales",
    description:
           "Automatización de tareas repetitivas y flujos operativos (formularios, correos, reportes, integraciones entre sistemas).",
    color: "pink",
    href: "/servicios/automation",
  },
  {
    number: "03",
    icon: "users",
    title: "Consultoría y Soporte Digital",
    description:
           "Acompañamiento continuo para actualizar, optimizar y mejorar tu sitio web, asegurando que la información y el contenido siempre estén al día.",
    color: "green",
    href: "/servicios/digital-support",
  },
  {
    number: "04",
    icon: "palette",
    title: "Diseño y Desarrollo de Sitios Web Profesionales",
    description:
      "Sitios corporativos, landing pages y plataformas web enfocadas en rendimiento, experiencia de usuario y escalabilidad.",
    color: "pink",
    href: "/servicios/professional-web-design",
  },
  {
    number: "05",
    icon: "link2",
    title: "Integración y Conexión de Sistemas",
    description:
      "Integración de APIs, plataformas externas y herramientas existentes para que todo el ecosistema digital funcione de forma unificada.",
    color: "green",
    href: "/servicios/integration",
  },
  {
    number: "06",
    icon: "bot",
    title: "Agentes de Inteligencia Artificial",
    description:
      "Agentes autónomos capaces de ejecutar tareas específicas como atención al cliente, seguimiento de leads, generación de reportes o asistencia interna.",
    color: "pink",
    href: "/servicios/ai-agents",
  },
];
---

<section id="servicios" class="border-t-0 relative py-16 sm:py-20 md:py-24 lg:py-32 overflow-hidden bg-white/3">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header - Responsive -->
    <div class="text-center mb-12 sm:mb-14 md:mb-16 section-header">
      <span class="text-[#00D6A1] font-medium text-xs sm:text-sm uppercase tracking-wider"
        >NUESTROS SERVICIOS</span
      >
      <h2
        class="font-heading text-2xl xs:text-3xl sm:text-4xl lg:text-5xl font-bold mt-2 sm:mt-3 mb-4 sm:mb-6 text-white px-4 sm:px-0"
      >
        Soluciones Digitales <span
          class="text-[#00D6A1] block xs:inline mt-1 xs:mt-0"
          >Integrales</span
        >
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto text-base sm:text-lg px-4 sm:px-6 lg:px-0 leading-relaxed">
        Combinamos innovación tecnológica con estrategia para impulsar el
        crecimiento de tu negocio.
      </p>
    </div>

    <!-- MOBILE: Carousel con navegación -->
    <div class="md:hidden">
      <div class="overflow-visible relative px-4">
        <div id="services-track-mobile" class="flex transition-transform duration-500 ease-in-out" style="min-height: 280px;">
          {services.map((service) => (
            <div class="shrink-0 w-full px-2">
              <a
                href={service.href} 
                class="group relative bg-[#0a0b1a] backdrop-blur-xl border border-[#0a0b1a] rounded-xl p-6 hover:bg-white/10 hover:border-[#00D6A1]/30 transition-all duration-300 active:scale-[0.98] h-full flex flex-col cursor-pointer"
              >
                <!-- Number badge -->
                <span
                  class={`absolute top-4 right-4 font-heading text-4xl font-bold ${
                    service.color === "green" ? "text-[#ed1d85]/40" : "text-[#00D6A1]/40"
                  }`}
                >
                  {service.number}
                </span>

                <!-- Icon -->
                <div
                  class={`w-12 h-12 rounded-lg flex items-center justify-center mb-4 shrink-0 ${
                    service.color === "green"
                      ? "bg-[#00D6A1]/10 text-[#00D6A1]"
                      : "bg-[#ed1d85]/10 text-[#ed1d85]"
                  } group-hover:scale-110 transition-transform duration-300`}
                >
                  {service.icon === "zap" && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  )}
                  {service.icon === "globe" && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {service.icon === "users" && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  )}
                  {service.icon === "palette" && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                    </svg>
                  )}
                  {service.icon === "link2" && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                    </svg>
                  )}
                  {service.icon === "bot" && (
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  )}
                </div>

                <!-- Content -->
                <div class="grow flex flex-col">
                  <h3 class="font-heading text-lg font-semibold mb-2 text-white group-hover:text-[#00D6A1] transition-colors pr-12">
                    {service.title}
                  </h3>
                  <p class="text-gray-400 text-sm leading-relaxed">
                    {service.description}
                  </p>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Controls -->
      <div class="flex items-center justify-center gap-4 mt-8">
        <!-- Previous Button -->
        <button
          id="prev-mobile"
          class="w-10 h-10 bg-[#00D6A1] text-[#0a0b1a] rounded-full flex items-center justify-center hover:bg-[#00D6A1]/90 transition-colors"
          aria-label="Servicio anterior"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>

        <!-- Dots Indicators -->
        <div class="flex gap-2">
          {services.map((_, index) => (
            <button
              class="service-dot w-2.5 h-2.5 rounded-full bg-gray-600 transition-all duration-300"
              data-index={index}
              aria-label={`Ir a servicio ${index + 1}`}
            ></button>
          ))}
        </div>

        <!-- Next Button -->
        <button
          id="next-mobile"
          class="w-10 h-10 bg-[#00D6A1] text-[#0a0b1a] rounded-full flex items-center justify-center hover:bg-[#00D6A1]/90 transition-colors"
          aria-label="Siguiente servicio"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>
    </div>

    <!-- TABLET & DESKTOP: Grid estático -->
    <div class="hidden md:grid md:grid-cols-2 lg:grid-cols-3 gap-5 md:gap-6">
      {services.map((service, index) => (
        <a
          href={service.href} 
          class="group relative bg-[#0a0b1a] backdrop-blur-xl border border-[#0a0b1a] rounded-xl sm:rounded-2xl p-6 sm:p-7 md:p-8 hover:bg-white/10 hover:border-[#00D6A1]/30 transition-all duration-300 service-card hover:shadow-[0_20px_40px_rgba(0,214,161,0.1)] hover:-translate-y-2 block cursor-pointer"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Number badge -->
          <span
            class={`absolute top-4 right-4 sm:top-6 sm:right-6 font-heading text-4xl sm:text-5xl md:text-6xl font-bold ${
              service.color === "green" ? "text-[#ed1d85]/40" : "text-[#00D6A1]/40"
            }`}
          >
            {service.number}
          </span>

          <!-- Icon -->
          <div
            class={`w-12 h-12 sm:w-14 sm:h-14 rounded-lg sm:rounded-xl flex items-center justify-center mb-4 sm:mb-5 md:mb-6 ${
              service.color === "green"
                ? "bg-[#00D6A1]/10 text-[#00D6A1]"
                : "bg-[#ed1d85]/10 text-[#ed1d85]"
            } group-hover:scale-110 transition-transform duration-300`}
          >
            {service.icon === "zap" && (
              <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            )}
            {service.icon === "globe" && (
              <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
            {service.icon === "users" && (
              <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            )}
            {service.icon === "palette" && (
              <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
              </svg>
            )}
            {service.icon === "link2" && (
              <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
              </svg>
            )}
            {service.icon === "bot" && (
              <svg class="w-6 h-6 sm:w-7 sm:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            )}
          </div>

          <!-- Content -->
          <h3 class="font-heading text-lg sm:text-xl font-semibold mb-2 sm:mb-3 text-white group-hover:text-[#00D6A1] transition-colors pr-12 sm:pr-14">
            {service.title}
          </h3>
          <p class="text-gray-400 text-sm sm:text-base leading-relaxed">
            {service.description}
          </p>

          <!-- Hover indicator -->
          <div class="absolute bottom-4 right-4 sm:bottom-6 sm:right-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300 hidden sm:block">
            <svg class="w-5 h-5 text-[#00D6A1]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  // ===== MOBILE CAROUSEL =====
  const trackMobile = document.getElementById('services-track-mobile');
  const prevBtnMobile = document.getElementById('prev-mobile');
  const nextBtnMobile = document.getElementById('next-mobile');
  const dots = document.querySelectorAll('.service-dot');
  let currentIndexMobile = 0;
  const totalServices = 6;

  function updateCarouselMobile(index: number) {
    if (!trackMobile) return;
    
    currentIndexMobile = index;
    const offset = currentIndexMobile * 100;
    trackMobile.style.transform = `translateX(-${offset}%)`;
    
    // Update dots
    dots.forEach((dot, i) => {
      if (i === currentIndexMobile) {
        dot.classList.add('bg-[#00D6A1]', 'w-8');
        dot.classList.remove('bg-gray-600', 'w-2.5');
      } else {
        dot.classList.remove('bg-[#00D6A1]', 'w-8');
        dot.classList.add('bg-gray-600', 'w-2.5');
      }
    });
  }

  prevBtnMobile?.addEventListener('click', () => {
    const newIndex = currentIndexMobile === 0 ? totalServices - 1 : currentIndexMobile - 1;
    updateCarouselMobile(newIndex);
  });

  nextBtnMobile?.addEventListener('click', () => {
    const newIndex = currentIndexMobile === totalServices - 1 ? 0 : currentIndexMobile + 1;
    updateCarouselMobile(newIndex);
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      updateCarouselMobile(index);
    });
  });

  // Initialize mobile carousel
  updateCarouselMobile(0);

  // ===== INTERSECTION OBSERVER (para animaciones de scroll en tablet/desktop) =====
  const observerOptions = {
    threshold: 0.1,
    rootMargin: "0px 0px -50px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("animate-in");
      }
    });
  }, observerOptions);

  const sectionHeader = document.querySelector(".section-header");
  const serviceCards = document.querySelectorAll(".service-card");

  if (sectionHeader) observer.observe(sectionHeader);
  serviceCards.forEach((card) => observer.observe(card));
</script>

<style>
  /* Section header animation */
  .section-header {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .section-header.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  /* Service cards animation (para tablet/desktop grid) */
  .service-card {
    opacity: 0;
    transform: translateY(30px);
    transition: 
      opacity 0.5s ease-out, 
      transform 0.5s ease-out,
      background-color 0.3s ease,
      border-color 0.3s ease,
      box-shadow 0.3s ease;
  }

  .service-card.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  /* Touch devices - prevent hover stuck state */
  @media (hover: none) {
    .group:hover {
      background-color: rgba(10, 11, 26, 1) !important;
      border-color: rgba(10, 11, 26, 1) !important;
    }
    
    .group:active {
      background-color: rgba(255, 255, 255, 0.1) !important;
      border-color: rgba(0, 214, 161, 0.3) !important;
    }
  }

  /* Prevent text selection on rapid taps */
  @media (max-width: 640px) {
    .group {
      -webkit-tap-highlight-color: transparent;
      user-select: none;
    }
  }

  /* Mobile optimizations */
  @media (max-width: 640px) {
    .service-card {
      transform: translateY(20px);
    }
    
    /* Faster animations on mobile */
    .service-card.animate-in {
      transition: opacity 0.4s ease-out, transform 0.4s ease-out;
    }
  }
</style>