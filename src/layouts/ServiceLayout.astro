---
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import Whatsapp from "@/components/sections/whatsapp.astro";
import "../styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#0a0b1a" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Prismatica</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600;800&family=Epilogue:wght@700;900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="relative z-10 min-h-screen overflow-x-hidden bg-[#0a0b1a] text-white">
    <div class="relative">
      <Header />

      <main>
        <slot />
      </main>

      <Footer />
      <Whatsapp />
    </div>
  </body>
</html>