---
import Background from "@/components/sections/Background.astro";
import Header from "@/components/layout/Header.astro";
import Hero from "@/components/sections/Hero.astro";
import Nosotros from "@/components/sections/Nosotros.astro";
import Servicios from "@/components/sections/Servicios.astro";
import Portafolio from "@/components/sections/Portafolio.astro";
import InteligenciaArtificial from "@/components/sections/InteligenciaArtificial.astro";
import Contacto from "@/components/sections/Contacto.astro";
import Footer from "@/components/layout/Footer.astro";
import Whatsapp from "@/components/sections/whatsapp.astro";
import BurbujaChatbot from "@/components/sections/BurbujaChatbot.astro";
import { Meteors } from "@/components/ui/meteors";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    
    <!-- Meta tags para iOS Safari -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Favicon principal -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <meta name="theme-color" content="#0a0b1a" />
    <meta name="generator" content={Astro.generator} />
    <title>Prismatica Software and Automation</title>
  </head>

  <body class="relative z-10 min-h-screen overflow-x-hidden bg-[#0a0b1a]">
    <Background />
    <Meteors number={15} client:only="react" />

    <div class="relative">
      <Header />
      <Hero />
      <Servicios />
      <Portafolio />
      <Nosotros />
      <InteligenciaArtificial />
      <Contacto />
      <Footer />
      <Whatsapp />

      <main>
        <slot />
      </main>
    </div>

    <!-- Chatbot
    <BurbujaChatbot />
     -->
  </body>
</html>